<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MendiChart" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/summary_range_text_color</item>
        <item name="colorPrimaryVariant">@color/summary_range_text_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/dm_sans_family</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MendiChart.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MendiChart.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MendiChart.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="SummaryTextStyle">
        <item name="fontFamily">@font/dm_sans_bold</item>
        <item name="android:fontFamily">@font/dm_sans_bold</item>
    </style>
    
</resources>